<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
       >
        <androidx.cardview.widget.CardView
            android:id="@+id/img_Container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:elevation="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_ShopAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/iphone"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/img_Container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tv_ShopName"
                android:layout_width="wrap_content"
                android:maxWidth="210dp"
                android:layout_height="wrap_content"
                android:text="Apple shop hello hello"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_ShopEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123@gmail.com"
                android:textSize="12dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_ShopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UIT, Linh Trung"
                android:textSize="12dp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:backgroundTint="@color/secondary_gray"
                    android:src="@drawable/img_star"
                    android:layout_marginRight="3dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_ShopRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.7"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/5.0"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0.5px"
                    android:layout_height="13dp"
                    android:background="@color/secondary_gray"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_NumberFollower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="136"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/secondary_gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Follower"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/secondary_gray"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_UnFollow"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:background="@drawable/border_button"
            android:textColor="@color/primary_red"
            android:padding="0dp"
            android:text="Hủy theo dõi"
            android:textSize="8dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
